{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb",
  "overrides": [
    {
      "files": ["gulpfile.babel.js", "gulp/**/*.js"],
      "rules": {
        "no-console": "off",
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "import/no-extraneous-dependencies": "off"
      }
    }
  ],
  "rules": {
    "import/no-unresolved": false,
    "import/extensions": false,
    "react/prop-types": false,
    "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
    "comma-dangle": ["error", "only-multiline"],
    "indent": [2, 2],
    "linebreak-style": ["error", "unix"],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "always"],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "space-infix-ops": ["error"],
    "no-var": ["warn"],
    "no-underscore-dangle": "off",
    "arrow-body-style": "off",
    "class-methods-use-this": "off",
    "consistent-return": "off",
    "func-names": "off",
    "space-before-function-paren": "off",
    "no-void": "off",
    "no-mixed-operators": "off",
    "no-return-assign": "off",
    "no-restricted-syntax": "off",
    "no-param-reassign": "off",
    "newline-per-chained-call": "off",
    "max-len": "off",
    "no-plusplus": "off",
    "no-unused-expressions": "off",
    "no-multi-assign": "off",
    "no-cond-assign": "off",
    "camelcase": "off",
    "eqeqeq": "off",
    "radix": "off",
    "one-var": "off",
    "no-restricted-properties": "off",
    "no-nested-ternary": "off",
    "no-use-before-define": "off",
    "no-empty-function": "off",
    "no-useless-constructor": "off",
    "no-useless-escape": "off",
    "default-case": "off",
    "no-shadow": "off",
    "prefer-rest-params": "off",
    "prefer-spread": "off",
    "no-alert": "off",
    "prefer-const": "off",
    "prefer-arrow-callback": "off",
    "no-new": "off",
    "wrap-iife": ["error", "any"]
  },
  "globals": {
    "$": true,
    "_": true,
    "afterEach": true,
    "angular": true,
    "before": true,
    "beforeEach": true,
    "browserInfo": true,
    "bugsnag": true,
    "bugsnagClient": true,
    "chai": true,
    "config": true,
    "context": true,
    "d3": true,
    "describe": true,
    "Donut": true,
    "Drop": true,
    "expect": true,
    "fixture": true,
    "google": true,
    "GoogleMapsLoader": true,
    "Highcharts": true,
    "inject": true,
    "Intercom": true,
    "it": true,
    "jQuery": true,
    "JST": true,
    "linkifyStr": true,
    "module": true,
    "moment": true,
    "Noty": true,
    "Pikaday": true,
    "sinon": true,
    "svgPanZoom": true,
    "Tether": true,
    "Tinycon": true,
    "Twilio": true,
    "Velocity": true,
    "videojs": true,
    "zE": true,
    "Viewthespace": true
  }
}
